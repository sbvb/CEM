<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/fiprelstchkbxPresent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:clickable="false"
        android:focusable="false"
        android:text="" />

    <ImageView
        android:id="@+id/fiprelstimgAvatar"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fiprelstchkbxPresent"
        android:src="@drawable/no_image_male" />

    <CheckedTextView
        android:id="@+id/fiprelstTxtName"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:gravity="center_vertical" android:ellipsize="marquee"
		 android:text="vinicius" android:checked="false"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:checkMark="?android:attr/listChoiceIndicatorMultiple" />

</RelativeLayout>